<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdDetails">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/list_details_bg"
                        android:layout_marginLeft="20dp"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/list_details_bg"
                        android:layout_marginLeft="20dp"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/list_details_bg"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:scaleType="fitXY"/>
                </LinearLayout>
            </HorizontalScrollView>
            <Button
                android:id="@+id/home_type"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Family"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:background="@drawable/button_style1"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>
            <Button
                android:id="@+id/fullAddress"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:text="Green Garden Road , Farmgate"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_style1"
                android:textColor="#FFFFFF"
                android:paddingLeft="15dp"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:weightSum="4">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="40dp"
                    android:text="Price"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:background="#49385F"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/mPrice"
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="40dp"
                    android:text="10000"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="#49385F"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:weightSum="4">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="40dp"
                    android:text="Rooms /Seats"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:background="#49385F"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/nRoom"
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="40dp"
                    android:text="4"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:background="#49385F"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:weightSum="4">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="40dp"
                    android:text="Bathrooms"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:background="#49385F"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/nBath"
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="40dp"
                    android:text="2"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:background="#49385F"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:weightSum="4">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="40dp"
                    android:text="Contact No."
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:background="#49385F"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/contactN"
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="40dp"
                    android:text="2"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:background="#49385F"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:weightSum="4">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="40dp"
                    android:text="Floor No."
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:background="#49385F"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/nFloor"
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="40dp"
                    android:text="3rd"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:background="#49385F"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:weightSum="4">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="40dp"
                    android:text="Rent Start From"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:background="#49385F"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/rent"
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="40dp"
                    android:text="Jan"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:background="#49385F"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Facilities"
                android:textSize="20sp"
                android:textColor="#04E091"
                android:gravity="center"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/checkboxValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gas,Lift,Parking,Garage"
                android:textSize="16sp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="4">
                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_weight="1.7"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_style1"
                    android:text="Delete this Ad"
                    android:textColor="#F30606"
                    android:textSize="20sp"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>