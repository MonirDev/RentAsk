<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:layout_height="match_parent"
    tools:context=".AdDetailsCustomer">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/home_type"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Family"
                    android:layout_alignBottom="@id/scroll"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_shape2"
                    android:textColor="#FFF"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="false"
                    />
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/scroll"
                    android:layout_marginTop="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/logo"
                            android:layout_marginLeft="20dp"
                            android:scaleType="fitXY"/>
                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/logo"
                            android:layout_marginLeft="20dp"
                            android:layout_alignParentRight="@id/img1"
                            android:scaleType="fitXY"/>
                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/logo"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:scaleType="fitXY"/>
                    </LinearLayout>
                </HorizontalScrollView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="15dp"
                    android:layout_below="@+id/scroll"
                    android:layout_marginBottom="14dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <Button
                            android:id="@+id/fullAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Green Garden Road , Farmgate"
                            android:textAllCaps="false"
                            android:drawableLeft="@drawable/ic_location_on_black_24dp"
                            android:padding="10dp"
                            android:background="@drawable/button_shape"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/cardview2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardview1"
                    android:gravity="center_horizontal"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="351dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="15dp">
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal"
                                android:weightSum="2">
                                <TextView
                                    android:id="@+id/textprice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_weight="1"
                                    android:text="Price"
                                    android:textAllCaps="false"
                                    android:textSize="15dp" />
                                <TextView
                                    android:id="@+id/mPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="15000"
                                    android:textSize="15dp" />
                            </LinearLayout>
                            <View
                                android:layout_width="350dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:background="#C4C4C4" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"
                                android:weightSum="2">
                                <TextView
                                    android:id="@+id/textprice1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_weight="1"
                                    android:text="Rooms /Seats"
                                    android:textAllCaps="false"
                                    android:textSize="15dp" />
                                <TextView
                                    android:id="@+id/nRoom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="4"
                                    android:textSize="15dp" />
                            </LinearLayout>
                            <View
                                android:layout_width="350dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:background="#C4C4C4" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"
                                android:weightSum="2">
                                <TextView
                                    android:id="@+id/textprice2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_weight="1"
                                    android:text="Bathrooms"
                                    android:textAllCaps="false"
                                    android:textSize="15dp" />
                                <TextView
                                    android:id="@+id/nBath"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="2"
                                    android:textSize="15dp" />
                            </LinearLayout>
                            <View
                                android:layout_width="350dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:background="#C4C4C4" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"
                                android:weightSum="2">
                                <TextView
                                    android:id="@+id/textprice3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_weight="1"
                                    android:text="Floor"
                                    android:textAllCaps="false"
                                    android:textSize="15dp" />
                                <TextView
                                    android:id="@+id/nFloor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="3rd"
                                    android:textSize="15dp" />
                            </LinearLayout>
                            <View
                                android:layout_width="350dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:background="#C4C4C4" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"
                                android:weightSum="2">
                                <TextView
                                    android:id="@+id/textprice4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_weight="1"
                                    android:text="Rent Start From"
                                    android:textAllCaps="false"
                                    android:textSize="15dp" />
                                <TextView
                                    android:id="@+id/rent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="April"
                                    android:textSize="15dp" />
                            </LinearLayout>
                            <!--<View
                                android:layout_width="350dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:background="#C4C4C4" />-->
                           <!-- <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"
                                android:weightSum="2">
                                <TextView
                                    android:id="@+id/textprice5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_weight="1"
                                    android:text="Spacious"
                                    android:textAllCaps="false"
                                    android:textSize="15dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="870sqft"
                                    android:textSize="15dp" />
                            </LinearLayout>
                            <View
                                android:layout_width="350dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:background="#C4C4C4" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal"
                                android:weightSum="2">
                                <TextView
                                    android:id="@+id/textprice6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_weight="1"
                                    android:text="Built in"
                                    android:textAllCaps="false"
                                    android:textSize="15dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="2018"
                                    android:textSize="15dp" />
                            </LinearLayout>-->
                            <View
                                android:layout_width="350dp"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:background="#C4C4C4" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="15dp"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:id="@+id/address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Address: Farmgate, Tejgaon, Dhaka"
                                    android:textAllCaps="false"
                                    android:textSize="15dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/carview3"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_below="@+id/cardview2"
                    android:gravity="center_horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="15dp">
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Facilities"
                                    android:textColor="#000"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/checkboxValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Lorem Ipsum is simply dummy"
                                    android:textColor="#AE000000"
                                    android:textSize="14dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
    <Button
        android:id="@+id/contactN"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#49385F"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_call_black_24dp"
        android:text="Call Now"
        android:textColor="#FFF" />
</LinearLayout>